{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "es6"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", ".vscode"]
}
