{
  "name": "rest_gateway",
  "version": "1.0.0",
  "description": "REST Gateway",
  "author": "Philipp Bauch",
  "repository": {
    "type": "git",
    "url": "https://github.com/philippbauch/performance-of-api-composition"
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf dist && npm run build",
    "build:watch": "tsc --watch",
    "dev": "concurrently \"npm:build:watch\" \"nodemon\"",
    "start": "node -r dotenv/config ./dist/index.js",
    "sync:proto": "./sync_proto.sh"
  },
  "dependencies": {
    "@grpc/proto-loader": "^0.5.1",
    "apollo-server": "^2.6.4",
    "axios": "^0.19.0",
    "dotenv": "^8.0.0",
    "graphql": "^14.3.1",
    "grpc": "^1.21.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/graphql": "^14.2.1",
    "@types/node": "^12.0.0",
    "@types/winston": "^2.4.4",
    "concurrently": "^4.1.0",
    "nodemon": "^1.19.0",
    "prettier": "^1.17.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  }
}
